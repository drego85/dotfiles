#!/usr/bin/env bash

# This script create all symlinks for all bash script located in this directory.

. ../.common/utils.sh

# Full path of this script.
SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

BINDIR="$(xdg-user-dir)/.local/bin"

mkdir --parents --verbose "$BINDIR"

ed_make_symlink "$SCRIPTDIR/java-init" "$BINDIR/java-init"
ed_make_symlink "$SCRIPTDIR/backup" "$BINDIR/backup"
ed_make_symlink "$SCRIPTDIR/sapienza-wifi" "$BINDIR/sapienza-wifi"
ed_make_symlink "$SCRIPTDIR/firefox-tmp" "$BINDIR/firefox-tmp"
ed_make_symlink "$SCRIPTDIR/screen-off" "$BINDIR/screen-off"
ed_make_symlink "$SCRIPTDIR/goodmorningitalia" "$BINDIR/goodmorningitalia"
