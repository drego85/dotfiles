#!/usr/bin/env bash

# This script creates the symlink of xsession configuration.
# I use xsessionrc script to set PATH.

# Full path of this script.
SCRIPTDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

USERDIR="$(xdg-user-dir)"

# Avoid to recreate the symlink.
XRC="$USERDIR/.xsessionrc"
if [[ -L "$XRC" ]]; then
  echo "xsession: xsessionrc symlink already created!"
else
  ln --symbolic -i "$SCRIPTDIR/xsessionrc" "$XRC"
fi
